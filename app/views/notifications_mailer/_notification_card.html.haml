= link_to notification_url(notification) do
  .div{id: "notification_#{notification.id}"}
    .flex.flex-row.notification-item
      %span.notification-image
        %svg{:fill => "currentColor", :viewbox => "0 0 24 24"}
          %path{:d => "M24
          20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z"}
      .flex.flex-col
        - if notification.sender.present?
          %span.font-semibold.text-slate-700 #{notification.sender.name} 
        
        %span.text-slate-500 #{notification.display_text}

        %span.text-slate-500.text-xs #{time_ago_in_words(notification.created_at)} ago
          
    
