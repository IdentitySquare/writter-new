= turbo_stream.replace "icon" do
  %button.relative.rounded-full.bg-white.p-1.text-gray-400.hover:text-gray-500.focus:outline-none.focus:ring-2.focus:ring-offset-2{type: "button", id: 'icon', "x-on:click": "open = ! open"}
    %span.sr-only View notifications
    / Heroicon name: outline/bell-desktop

    .absolute.bg-yellow-400.rounded-full{ class: ' top-0.5 right-1 w-4 h-4' } 
      .text-xs.text-black#count #{unread_count}
                
        
    
    %svg.h-8.w-8{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
      %path{d: "M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0", "stroke-linecap" => "round", "stroke-linejoin" => "round"}

  
= turbo_stream.prepend "notifications" do
  = link_to notification do
    = render partial: 'notifications/notification', formats: [:html], locals: { notification: notification }    