%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:name => "x-apple-disable-message-reformatting"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
    %style{:media => "all", :rel => "stylesheet", :type => "text/css"}
      :css
        /* Base ------------------------------ */
        @import url("https://fonts.googleapis.com/css?family=Nunito+Sans:400,700&display=swap");
        body {
          width: 100% !important;
          height: 100%;
          margin: 0;
          -webkit-text-size-adjust: none;
        }

        a {
          color: #000000;
          font-size: 16px;
          text-decoration: none;
        }
      
        a img {
          border: none;
        }

        td {
          word-break: break-word;
        }

        .preheader {
          display: none !important;
          visibility: hidden;
          mso-hide: all;
          font-size: 1px;
          line-height: 1px;
          max-height: 0;
          max-width: 0;
          opacity: 0;
          overflow: hidden;
        }

        /* Type ------------------------------ */
        body,
        td,
        th {
          font-family: "Nunito Sans", Helvetica, Arial, sans-serif;
        }

        h1 {
          margin-top: 0;
          color: #333333;
          font-size: 22px;
          font-weight: bold;
          text-align: left;
        }

        h2 {
          margin-top: 0;
          color: #333333;
          font-size: 16px;
          font-weight: bold;
          text-align: left;
        }

        h3 {
          margin-top: 0;
          color: #333333;
          font-size: 14px;
          font-weight: bold;
          text-align: left;
        }

        td,
        th {
          font-size: 16px;
        }

        p,
        ul,
        ol,
        blockquote {
          margin: .4em 0 1.1875em;
          font-size: 16px;
          line-height: 1.625;
        }

        p.sub {
          color: #A8AAAF;
          font-size: 10px;
        }

        p.da-footer {
          font-size: 12px;
        }

        /* Utilities ------------------------------ */
        .align-right {
          text-align: right;
        }

        .align-left {
          text-align: left;
        }

        .align-center {
          text-align: center;
        }

        .inline {
          display: inline;
        }

        .w-fit {
          width: fit-content;
        }

        .fixed-width {
          width: 60%;
          padding: 8px 20px;
        }

        .fixed-width-long-text {
          width: 60%;
          padding: 8px 10px !important;
        }

        .d-flex {
          display: flex;
        }

        .justify-content-center {
          justify-content: center;
        }

        hr {
          margin: auto 100px
        }


        /* Buttons ------------------------------ */
        .button {
          background-color: #ffffff;
          padding: 8px 70px;
          margin-top: 20px;
          display: inline-block;
          color: #000000;
          text-decoration: none;
          border-radius: 5px;
          border-color: #000000;
          box-shadow: 0 2px 3px rgba(0, 0, 0, 0.16);
          -webkit-text-size-adjust: none;
          box-sizing: border-box;
          font-weight: 400;
          text-align: center;
        }


        /* Social Icons ------------------------------ */
        .social {
          width: auto;
        }

        .social td {
          padding-top: 20px;
          padding-bottom: 40px;
          width: auto;
        }

        .social_icon {
          height: 24px;
          width: 24px;
          margin: 0 8px 10px 8px;
          padding: 10px;
        }

        body {
          background-color: #F2F4F6;
          color: #51545E;
        }

        

        .body-text {
          display: -webkit-box;
          -webkit-line-clamp: 4;
          -webkit-box-orient: vertical;
          overflow: hidden;
          line-height: 1.625;
        }

        .email-wrapper {
          width: 100%;
          margin: 0;
          padding: 0;
          -premailer-width: 100%;
          -premailer-cellpadding: 0;
          -premailer-cellspacing: 0;
          background-color: #F4F6FC;
        }

        .email-content {
          width: 100%;
          margin: 0;
          padding: 0;
          -premailer-width: 100%;
          -premailer-cellpadding: 0;
          -premailer-cellspacing: 0;
        }
        /* Masthead ----------------------- */

        .email-masthead {
          padding: 25px;
          text-align: left;
        }

        .email-brand-img {
          max-width: 100px;
        } 

        .email-masthead-logo {
          max-width: 94px;
          padding: 25px;
        }

        .small-logo {
          height: 24px;
          width: 42px;
          padding: 25px;
        }


        .email-masthead_name {
          font-size: 16px;
          font-weight: bold;
          color: #A8AAAF;
          text-decoration: none;
          text-shadow: 0 1px 0 white;
        }
        /* Body ------------------------------ */

        .email-body {
          width: 100%;
          margin: 0;
          padding: 0;
          -premailer-width: 100%;
          -premailer-cellpadding: 0;
          -premailer-cellspacing: 0;
        }

        .email-body_inner {
          width: 600px;
          margin: 0 auto;
          padding: 0;
          -premailer-width: 600px;
          -premailer-cellpadding: 0;
          -premailer-cellspacing: 0;
          background-color: #FFFFFF;
        }

        .email-footer {
          width: 600px;
          margin: 0 auto;
          padding: 0;
          -premailer-width: 600px;
          -premailer-cellpadding: 0;
          -premailer-cellspacing: 0;
          text-align: center;
          }

        .email-footer p {
          color: #A8AAAF;
        }

        .body-action {
          width: 100%;
          margin: 30px auto;
          padding: 0;
          -premailer-width: 100%;
          -premailer-cellpadding: 0;
          -premailer-cellspacing: 0;
          text-align: center;
        }

        .body-sub {
          margin-top: 25px;
          padding-top: 25px;
          border-top: 1px solid #EAEAEC;
        }

        .content-cell {
          padding-top: 0px;
          padding-bottom: 40px;
          padding-left: 50px;
          padding-right: 50px;
        }

        .flex {
          display: flex;
        }
        .flex-row {
          flex-direction: row;
          gap: 10px;
        }
        .flex-col {
          display: flex;
          flex-direction: column;
          gap: 10px;
        }

        .justify-center{
          justify-content: center; 
        }

        .border {
          border-radius: 2px;
          --tw-border-opacity: 1;
          border-color: rgba(209, 213, 219, var(--tw-border-opacity));
          border-width: 1px;
          border-style: solid;
        }

        .notification-item {
        
          padding-left: 1rem;
          padding-right: 1rem;
          padding-top: 24px;
          padding-bottom: 24px; 
          gap: 0.75rem;
          font-size: 0.875rem;
          line-height: 1.25rem;
          color: #374151;
        }

        .text-slate-700{
          color: #374151;
        }
      

        .post-card {
          padding: 20px 0px;
        }

        /* Spacing ------------------------------ */

        .my-auto {
          margin-top: auto;
          margin-bottom: auto;
        }

        .mx-auto {
          margin-left: auto;
          margin-right: auto;
        }

        .mt-5 { margin-top: 20px; }
        .mb-8 { margin-bottom: 32px; }

        .px-75px {
          padding-left: 75px;
          padding-right: 75px;
        }

        .py-30px {
          padding-top: 30px;
          padding-bottom: 30px;
        }

        .px-5 {
          padding-left: 20px;
          padding-right: 20px;
        }

        .checkbox {
          width: 15px;
          height: 15px;
          border-radius: 2px;
          --tw-border-opacity: 1;
          border-color: rgba(209, 213, 219, var(--tw-border-opacity));
          border-width: 1px;
          border-style: solid;
          flex: none;
          margin-top: auto;
          margin-bottom: auto;
        }

        /* Typography ------------------------------ */

        .text-red {
          color: #D53533;
        }

        .text-green {
          color: #1F9753;
        }

        .text-yellow {
          color: #ffb82e;
        }

        .text-violet {
          color: #503e9d;
        }

        .font-bolder {
          font-weight: 700;
        }

        .font-bold {
          font-weight: 700;
        }

        .font-semibold {
          font-weight: 600;
        }
        .notification-image{
          width: 2.5rem; 
          height: 2.5rem; 
          border-radius: 9999px; 
        }
        .text-sm {
          font-size: 14px;
          color: #6C6E80;
        }

        .text-16px {
          font-size: 16px;
          line-height: 1.5rem;
          color: #6C6E80;
        }

        .text-base {
          font-size: 18px;
        }

        .text-32px {
          font-size: 32px;
        }

      :css
        /*Media Queries ------------------------------ */
        /* NOTE: Add !important to all media queries or it won't work on Gmail */
        @media only screen and (max-width:600px) {
          .email-body_inner,
          .email-footer {
            width: 100% !important;
          }
        }
          

  %body
   
    %table.email-wrapper{:cellpadding => "0", :cellspacing => "0", :role => "presentation", :width => "100%"}
      %tr
        %td{:align => "center"}
          %table.email-content{:cellpadding => "0", :cellspacing => "0", :role => "presentation", :width => "100%"}

            / Email Body
            %tr
              %td.email-body{:cellpadding => "0", :cellspacing => "0", :width => "600"}
                %table.email-body_inner{:align => "center", :cellpadding => "0", :cellspacing => "0", :role => "presentation", :width => "600"}
                  / Body content
                  %tr
                    %td.email-masthead-logo
                      = link_to root_url do
                        = image_tag(url_for('/assets/logo_black.png'), skip_pipeline: true, class: 'email-brand-img')
                  %tr
                    %td.content-cell
                      .text-32px.font-bolder.align-center= yield :email_title
                      .f-fallback
                        = yield :comic_image
                        %p.f-fallback.sub.align-center.mb-8{style: 'font-size: 8px;'}
                          = yield :comic_copyright

                        = yield
                  %tr
                    %td
                      %table.email-footer{:align => "center", :cellpadding => "0", :cellspacing => "0", :role => "presentation", :width => "600"}
                        %tr
                          %td.social{:align => "center"}
                            =link_to image_tag(url_for('/assets/logo_black.png'), skip_pipeline: true, class: "small-logo"), ""
                           
                        %tr
                          %td.social{:align => "center"}
                            %p.f-fallback.sub.align-center © #{Date.current.year} Writter
