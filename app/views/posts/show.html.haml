  = render 'banner', user: @user

  = render 'post', post: @post


  %hr.mb-5.mt-5

  .block.text-gray-700.font-bold.mb-5
    Comments

  .div#commentsForm
    = render 'comments/form', post: @post, comment: Comment.new
  
  
