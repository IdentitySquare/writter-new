- title "#{@post.title}"
.container.max-w-xl.editor-container.mx-auto.px-5.sm:px-0


  = render 'banner', user: @user

  .font-semibold.text-4xl.mb-10.text-center
    = @post.published_title 
  .text-justify
    = @post.published_body
  %hr.mb-5.mt-5

  .block.text-gray-700.font-bold.mb-5
    Comments

  .div#commentsForm
    = render 'comments/form', post: @post, comment: Comment.new
  
  
  .div#comments
    = render 'comments/comments', comments: @post.comments.kept.includes([:user])
    
 