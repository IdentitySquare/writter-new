- omni_auth_text = controller_name == 'sessions' ? 'Sign in' : 'Sign up'

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = form_for "Login",                                      |
      url: omniauth_authorize_path(resource_name, provider), |
      method: :post,                                         |
      data: {turbo: "false"} do |f|   
      .text-center                      
        = f.submit "#{omni_auth_text} with #{provider}", type: 'image', src: url_for('/assets/g_icon')



