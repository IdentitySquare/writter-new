%h2 Sign up

= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :name
    %br/
    = f.text_field :name, autofocus: true, autocomplete: "email"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
      %br/
    = f.password_field :password, autocomplete: "new-password"
  .actions
    = f.submit "Sign up", class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
= render "devise/shared/links"
